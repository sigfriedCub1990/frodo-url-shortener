{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "controllers/*": ["controllers/*"],
      "routes/*": ["routes/*"],
      "db/*": ["db/*"],
      "utils/*": ["utils/*"]
    },
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
